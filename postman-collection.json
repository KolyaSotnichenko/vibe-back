{
  "info": {
    "name": "Vibe Projects API",
    "description": "Complete Project management API with authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "vibe-test-api-key-2024-secure-token-12345",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Create Project",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Website Redesign\",\n  \"description\": \"Complete overhaul of company website\",\n  \"status\": \"PLANNING\",\n  \"startDate\": \"2024-03-01T00:00:00.000Z\",\n  \"endDate\": \"2024-08-31T00:00:00.000Z\",\n  \"owner\": \"John Doe\",\n  \"tags\": [\"web\", \"frontend\", \"design\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/projects",
          "host": ["{{baseUrl}}"],
          "path": ["projects"]
        },
        "description": "Creates a new project with validation"
      },
      "response": []
    },
    {
      "name": "Get All Projects",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects",
          "host": ["{{baseUrl}}"],
          "path": ["projects"]
        },
        "description": "Retrieves all projects"
      },
      "response": []
    },
    {
      "name": "Get Projects by Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects?status=PLANNING",
          "host": ["{{baseUrl}}"],
          "path": ["projects"],
          "query": [
            {
              "key": "status",
              "value": "PLANNING",
              "description": "Filter by project status (PLANNING, IN_PROGRESS, ON_HOLD, COMPLETED, CANCELLED)"
            }
          ]
        },
        "description": "Filters projects by status"
      },
      "response": []
    },
    {
      "name": "Get Projects by Tag",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects?tag=web",
          "host": ["{{baseUrl}}"],
          "path": ["projects"],
          "query": [
            {
              "key": "tag",
              "value": "web",
              "description": "Filter by tag"
            }
          ]
        },
        "description": "Filters projects by tag"
      },
      "response": []
    },
    {
      "name": "Get Project by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects/{{projectId}}",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "{{projectId}}"]
        },
        "description": "Gets a specific project by ID"
      },
      "response": []
    },
    {
      "name": "Update Project",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"IN_PROGRESS\",\n  \"description\": \"Updated description with more details\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/projects/{{projectId}}",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "{{projectId}}"]
        },
        "description": "Updates project fields (partial update)"
      },
      "response": []
    },
    {
      "name": "Delete Project",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects/{{projectId}}",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "{{projectId}}"]
        },
        "description": "Deletes a project permanently"
      },
      "response": []
    },
    {
      "name": "Get Project Count",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/projects/stats/count",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "stats", "count"]
        },
        "description": "Returns total number of projects"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "",
      "type": "string",
      "description": "Set this to a project ID after creating one"
    }
  ]
}
